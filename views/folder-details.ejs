<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>File Uploader</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="/modal.js" defer></script>
</head>
<body>
<%= console.trace(currentUser.fullname) %>
<%- include("partials/add-folder-modal.ejs") %>
<%- include("partials/add-file-modal.ejs") %>
<% if (currentUser) {%>
    <div class="top-bar">
            <div class="empty"></div>
                <h1><%= currentUser.fullname %>'s Files</h1>
            <a class="log-out-file" href="/log-out">Log out</a>
    </div>
    <div class="file-page">
        <div class="folder-section">
            <div class="top-box">
                <h2 class="folder-title">Files:</h2>
                <button class="new-file-btn">Upload file</button>
            </div>
            <div class="folder-box">
                <div class="folders-list">
                    <!-- files.foreach -->
                </div>
            </div>
        </div>        
    </div>
<% } %>
  
</body>
</html>