<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>File Uploader</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="/modal.js" defer></script>
</head>
<body>
<%= console.trace(currentUser.fullname) %>
<%- include("partials/add-folder-modal.ejs") %>
<%- include("partials/add-file-modal.ejs") %>
<% if (currentUser) {%>
    <div class="top-bar">
            <h1><%= currentUser.fullname %>'s file uploader</h1>
            <a href="/log-out">Log out</a>
    </div>
    <div class="file-option">
        <div class="folder-page-options">
            <div class="folder-options">
                <button class="new-folder-btn">New folder</button>
                <button class="new-file-btn">New file</button>
            </div>
            <!-- <form action="/upload" class="file-uploader-form" method="POST" enctype="multipart/form-data">
                <label for="file">Upload file</label>
                <input id="file" name="file" type="file" />
                <input type="submit" value="Upload File">
            </form> -->
        </div>
        <div class="folders-list">
            <% folders.forEach((folder) => { %>
                <button class="folder-btn"><%= folder.name %></button>
            <% }) %>
        </div>
            
    </div>
<% } %>
  
</body>
</html>